public class TypeInferenceDemo {

    public static void main(String[] args) {
        var integerVariable = 10;
        var stringVariable = "Hello, Java 10!";
        var doubleVariable = 3.14;

        System.out.println("Integer Variable: " + integerVariable);
        System.out.println("String Variable: " + stringVariable);
        System.out.println("Double Variable: " + doubleVariable);

        System.out.println("\nUsing var in a for-loop:");
        for (var i = 0; i < 5; i++) {
            System.out.println("i: " + i); // i is inferred as int
        }

        var list = java.util.List.of(1, 2, 3, 4, 5);
        System.out.println("\nList elements:");
        for (var element : list) {
            System.out.println("Element: " + element);

    }
}
